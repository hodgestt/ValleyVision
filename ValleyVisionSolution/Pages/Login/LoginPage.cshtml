@model ValleyVisionSolution.Pages.Login.LoginPageModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #274c77;
            font-family: Arial, sans-serif;
        }

        .login-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .bannerObject img {
            max-width: 100%;
            height: auto;
            margin-bottom: 20px; /* Adjust this value to manage space between the logo and the login form */
        }

        .container {
            width: 400px;
            padding: 20px;
            border-radius: 20px;
            background-color: white;
        }

        h1 {
            text-align: left;
            margin: 0;
        }

        h3 {
            text-align: left;
            margin: 0;
            margin-top: 5px;
        }

        h5 {
            margin-top: 20px;
            margin-bottom: 5px
        }

            h5.username {
                margin-top: 50px;
            }

        input[type="text"], .buttons button {
            width: 100%;
            padding: 10px;
            margin-top: 10px; /* Adjusts spacing */
            border: 1px solid #ccc;
            border-radius: 2px;
            box-sizing: border-box;
        }

        input[type="password"], .buttons button {
            width: 100%;
            padding: 10px;
            margin-top: 10px; /* Adjusts spacing */
            border: 1px solid #ccc;
            border-radius: 2px;
            box-sizing: border-box;
        }

        .buttons {
            display: flex;
            justify-content: space-between; /* Adjust buttons to sit next to each other */
            gap: 10px; /* Spacing between buttons */
            margin-top: 20px;
        }

            .buttons button {
                padding: 10px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                font-size: 16px;
            }

        .loginbtn {
            background-color: #007bff;
            color: white;
            /* Maintain the original width for the login button */
        }

            .loginbtn:hover {
                background-color: #0056b3;
            }

        .populatebtn { /* Style specifically for the populate button */
            padding: 10px 15px; /* Smaller padding for a smaller button */
            background-color: #6c757d; /* Bootstrap's secondary button color for differentiation */
            color: white;
        }

            .populatebtn:hover {
                background-color: #5a6268;
            }
/*         .buttons {
            text-align: center;
            margin-top: 30px;
        }

            .buttons button {
                padding: 10px 20px;
                margin: 0 5px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                background-color: #007bff;
                color: white;
                font-size: 16px;
            }

                .buttons button:hover {
                    background-color: #0056b3;
                }

            .buttons .loginbtn {
                width: 250px;
            } */

        .text-danger {
            text-align: center;
            margin-top: 5px;
            color: red;
        }
    </style>
</head>

<body>
    <div class="login-container">
        <div class="bannerObject">
            <img src="/images/MadCoPicture.png" alt="Logo">
        </div>
        <form asp-page="Index" method="post" class="container">
            @if (!string.IsNullOrEmpty(Model.LogoutMessage))
            {
                <p style="color:#0ccd0c">@Model.LogoutMessage</p>
            }
            <h1>Log in</h1>
            <h5 class="username">Username</h5>
            <input type="text" asp-for="@Model.UserCredentials.Username" placeholder="Enter your username" />
            <span asp-validation-for="@Model.UserCredentials.Username" class="text-danger"></span>

            <h5>Password</h5>
            <input type="text" asp-for="@Model.UserCredentials.Password" placeholder="Enter your password" />
            <span asp-validation-for="@Model.UserCredentials.Password" class="text-danger"></span>

            <div class="buttons">
                <button type="submit" class="loginbtn" asp-page-handler="LoginHandler" formnovalidate>Login &rarr;</button>
                <select name="option" style="border: 1px solid #ccc; border-radius: 2px;">
                    <option value="">Select User</option>
                    <option value="option1">Ryan Thompson</option>
                    <option value="option2">Tiffany Grayson</option>
                </select>
                <button type="submit" class="populatebtn" asp-page="/Login/LoginPage" asp-page-handler="PopulateHandler" formnovalidate>Populate</button>
            </div>

@*             <div class="buttons">
                <button type="submit" class="loginbtn" asp-page-handler="LoginHandler" formnovalidate>Login &rarr;</button>
                <button asp-page="/Login/LoginPage" type="submit" asp-page-handler="PopulateHandler" formnovalidate>Populate</button>
            </div> *@
            @if (!string.IsNullOrEmpty(Model.LoginMessage))
            {
                <p class="text-danger">@Model.LoginMessage</p>
            }
            <br/>
            
        </form>
    </div>
</body>
</html>



