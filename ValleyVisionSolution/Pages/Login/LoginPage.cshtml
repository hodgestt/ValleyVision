@page
@model ValleyVisionSolution.Pages.Login.LoginPageModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
    }

    .container {
        width: 400px;
        margin: 100px auto;
        padding: 20px;
        border-radius: 20px;
        background-color: white;
    }

    h1 {
        text-align: left;
        margin: 0;
    }

    h3 {
        text-align: left;
        margin: 0;
        margin-top: 5px;
    }

    h5 {
        margin-top: 20px;
        margin-bottom: 5px
    }

        h5.username {
            margin-top: 50px;
        }

    input[type="text"] {
        width: 100%;
        padding: 10px;
        margin-top: 0px;
        border: 1px solid #ccc;
        border-radius: 2px;
        box-sizing: border-box;
    }

        input[type="text"]:focus {
            border-color: #4d4d4f;
            outline: none;
        }

    .buttons {
        text-align: center;
        margin-top: 50px;
    }

        .buttons button {
            padding: 10px 20px;
            margin: 0 5px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            background-color: #007bff;
            color: white;
            font-size: 16px;
        }

            .buttons button:hover {
                background-color: #0056b3;
            }

        .buttons .loginbtn {
            width: 250px;
        }

    .text-danger {
        text-align: center;
        margin-top: 5px;
        color: red;
    }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
</head>
<body>
    <form asp-page="Index" method="post">
        <div class="container">
            @if (!string.IsNullOrEmpty(Model.LogoutMessage))
            {
                <p style="color:#0ccd0c">@Model.LogoutMessage</p>
            }
            <h1>Log in</h1>

            <h5 class="username">Username</h5>
            <input type="text" asp-for="@Model.UserCredentials.Username" placeholder="Enter your username" />
            <span asp-validation-for="@Model.UserCredentials.Username" class="text-danger"></span>

            <h5>Password</h5>
            <input type="text" asp-for="@Model.UserCredentials.Password" placeholder="Enter your password" />
            <span asp-validation-for="@Model.UserCredentials.Password" class="text-danger"></span>


            <div class="buttons">
                <button type="submit" class="loginbtn" asp-page-handler="LoginHandler" formnovalidate>Login &rarr;</button>
                <button asp-page="/Login/LoginPage" type="submit" asp-page-handler="PopulateHandler" formnovalidate>Populate</button>
            </div>
            @if (!string.IsNullOrEmpty(Model.LoginMessage))
            {
                <p class="text-danger">@Model.LoginMessage</p>
            }
            <br />
            @*<div class="sign-up">
            Click <a href="/TempAddUser/TempAddUserPage">here</a> to create an account.
            </div>*@
        </div>
    </form>
</body>
</html>
