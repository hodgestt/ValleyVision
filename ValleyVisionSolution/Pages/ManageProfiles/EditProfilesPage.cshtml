@page
@model ValleyVisionSolution.Pages.ManageProfiles.EditProfilesPageModel
@using FullProfile = ValleyVisionSolution.Pages.DataClasses.FullProfile;
@{
    ViewData["Title"] = "Edit Profile";
}

<!-- Edit Profile Form -->
<div class="modal fade" id="editProfileForm" data-bs-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form method="post" asp-page="/EditProfilesPage">
                <input type="hidden" name="triggeredBy" id="triggeredBy" value="">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Profile View</h5>
                    <button type="button" class="btn-close" id="closeButton" data-bs-dismiss="modal" aria-label="Close">
                    </button>
                </div>
                <div class="modal-body">

                    <input type="hidden" asp-for="@Model.ProfileToUpdate.UserID">
                    @{
                        FullProfile ProfileData = new FullProfile();
                        foreach (var profile in Model.AllProfiles)
                        {
                            if (profile.UserID == Model.ViewedProfile)
                            {
                                ProfileData = profile;
                            }
                        }
                    }
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div>Username:</div>
                            <input asp-for="@Model.ProfileToUpdate.UserName" type="text" class="form-control" />
                            <span class="text-danger" asp-validation-for="@Model.ProfileToUpdate.UserName"></span>
                        </div>
                        <div class="col-md-6">
                            <div>Password:</div>
                            <input asp-for="@Model.ProfileToUpdate.Password" type="Password" class="form-control" />
                            <span class="text-danger" asp-validation-for="@Model.ProfileToUpdate.Password"></span>
                        </div>
                        <div class="col-md-6">
                            <div>First Name:</div>
                            <input asp-for="@Model.ProfileToUpdate.FirstName" type="text" class="form-control"/>
                            <span class="text-danger" asp-validation-for="@Model.ProfileToUpdate.FirstName"></span>
                        </div>
                        <div class="col-md-6">
                            <div>Last Name:</div>
                            <input asp-for="@Model.ProfileToUpdate.LastName" type="text" class="form-control" />
                            <span class="text-danger" asp-validation-for="@Model.ProfileToUpdate.LastName"></span>
                        </div>
                        <div class="col-md-6">
                            <div>Email:</div>
                            <input asp-for="@Model.ProfileToUpdate.Email" type="text" class="form-control" />
                            <span class="text-danger" asp-validation-for="@Model.ProfileToUpdate.Email"></span>
                        </div>
                        <div class="col-md-6">
                            <div>Phone:</div>
                            <input asp-for="@Model.ProfileToUpdate.Phone" type="text" class="form-control" />
                            <span class="text-danger" asp-validation-for="@Model.ProfileToUpdate.Phone"></span>
                        </div>
                        <div class="col-md-6">
                            <div>User Type:</div>
                            <input asp-for="@Model.ProfileToUpdate.UserType" type="text" class="form-control" />
                            <span class="text-danger" asp-validation-for="@Model.ProfileToUpdate.UserType"></span>
                        </div>
                        <div class="col-md-6">
                            <div>Street:</div>
                            <input asp-for="@Model.ProfileToUpdate.Phone" type="text" class="form-control" />
                            <span class="text-danger" asp-validation-for="@Model.ProfileToUpdate.Street"></span>
                        </div>
                        <div class="col-md-6">
                            <div>Apartment:</div>
                            <input asp-for="@Model.ProfileToUpdate.Apartment" type="text" class="form-control" />
                            <span class="text-danger" asp-validation-for="@Model.ProfileToUpdate.Apartment"></span>
                        </div>
                        <div class="col-md-6">
                            <div>City:</div>
                            <input asp-for="@Model.ProfileToUpdate.City" type="text" class="form-control" />
                            <span class="text-danger" asp-validation-for="@Model.ProfileToUpdate.City"></span>
                        </div>
                        <div class="col-md-6">
                            <div>State:</div>
                            <input asp-for="@Model.ProfileToUpdate.State" type="text" class="form-control" />
                            <span class="text-danger" asp-validation-for="@Model.ProfileToUpdate.State"></span>
                        </div>
                        <div class="col-md-6">
                            <div>Zip:</div>
                            <input asp-for="@Model.ProfileToUpdate.Zip" type="text" class="form-control" />
                            <span class="text-danger" asp-validation-for="@Model.ProfileToUpdate.Zip"></span>
                        </div>
                        <div class="col-md-6">
                            <div>Country:</div>
                            <input asp-for="@Model.ProfileToUpdate.Country" type="text" class="form-control" />
                            <span class="text-danger" asp-validation-for="@Model.ProfileToUpdate.Country"></span>
                        </div>
                </div>
                <div class="modal-footer" style="border-top:none">
                    <button type="submit" class="btn btn-primary" asp-page-handler="UpdateProfile">Update</button>
                </div>
            </form>

        </div>
    </div>
</div>
<!-- End Edit Profile Form -->

<script>
    // Check if AddTaskInvalid is true on page load and reopen modal if needed
    window.addEventListener('DOMContentLoaded', (event) => {
        $('#editProfileForm').modal('show');

    });
</script>
<script>
    document.getElementById('closeButton').addEventListener('click', function () {
        // Redirect to the specific page
        window.location.href = '/ManageProfiles/EditProfilesPage';
    });
</script>    