@page
@model ValleyVisionSolution.Pages.Resources.ResourcesPageModel
@{
    ViewData["Title"] = "Resources";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
<div class="resource-container">
    <div class="resource-container" style="margin-bottom: 20px;">
        <div style="display: flex; justify-content: space-between; align-items: center; width: 100%;">
            <!-- Search form with a larger input field -->
            <form method="get" class="search-form" style="flex-grow: 1; display: flex; margin-right: 10px;">
                <input type="text" name="searchTerm" placeholder="Search files..." style="flex-grow: 1; margin-right: 10px; padding: 5px;" />
                <button type="submit" style="padding: 5px 10px;">Search</button>
            </form>

            <!-- Trigger Modal Button instead of direct form -->
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#uploadFileModal">
                Upload File
            </button>
        </div>
        @if (!string.IsNullOrEmpty(HttpContext.Request.Query["searchTerm"]))
        {
            <div class="mt-2">
                <a href="@Url.Page("./ResourcesPage")" class="badge bg-secondary fs-5">
                    @HttpContext.Request.Query["searchTerm"] <i class="bi bi-x-circle"></i>
                </a>
            </div>
        }


        <br /> <br />
        <table class="table">
            <thead>
                <tr>
                    <th>File Name</th>
                    <th>File Type</th>
                    <th>Uploaded Date</th>
                    <th>Uploaded By</th>
                    <th>Download</th> <!-- New column for actions like download -->
                </tr>
            </thead>
            <tbody>
                @foreach (var fileMeta in Model.ResourceList)
                {
                    <tr>
                        <td>@fileMeta.FileName_</td> <!-- Removed hyperlink from file name -->
                        <td>@fileMeta.FileType</td>
                        <td>@fileMeta.UploadedDateTime.ToString("MM/dd/yy hh:mm tt")</td>
                        <td>@fileMeta.FirstName @fileMeta.LastName</td>
                        <td>
                            <!-- Download Icon/Button -->
                            <a href="@Url.Content(fileMeta.FilePath)" download class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-download"></i>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- File Upload Modal -->
        <form method="post" enctype="multipart/form-data" asp-page-handler="Upload">
            <div class="modal fade" id="uploadFileModal" tabindex="-1" role="dialog" aria-labelledby="uploadFileModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="uploadFileModalLabel">Upload File</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <!-- File input -->
                            <input type="file" name="file" class="form-control" />
                        </div>
                        <div class="modal-footer">
                            <!-- Close and Upload buttons -->
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Upload</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>


</div>
