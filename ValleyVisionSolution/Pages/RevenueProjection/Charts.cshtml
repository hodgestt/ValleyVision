@page
@model ValleyVisionSolution.Pages.RevenueProjection.ChartModel
@{
    ViewData["Title"] = "Revenue Chart";
}

<div>
    <canvas id="revenueChart" width="600" height="400"></canvas>
</div>

@section Scripts
{
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('revenueChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Real Estate Tax', 'Personal Property Tax', 'Fees Licenses Tax', 'State Funding'],
                datasets: [
                    {
                        label: '@Model.DataList[0].Year',
                        data: [@{
            var dataString = "";
            foreach (var item in Model.DataList)
            {
                dataString += $"{item.RealEstateTax},{item.PersonalPropertyTax},{item.FeesLicensesTax},{item.StateFunding},";
            }
            @("[ " + dataString.TrimEnd(',') + " ]")
        }],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.5)',
                            'rgba(54, 162, 235, 0.5)',
                            'rgba(255, 206, 86, 0.5)',
                            'rgba(75, 192, 192, 0.5)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)'
                        ],
                        borderWidth: 1
                    }
                ]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}
