@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<style>
     .bkgImage {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 60vh;
        background-image: url('/images/MadCoHomePagePic.jpeg');
        background-size: cover;
        background-position: center;
        z-index: -1;
    }

    
    .content-container {
        position: relative; 
        top: 50vh; 
        height: 50vh; 
        overflow: auto; 
    }
    

    .search-bar-container {
        position: absolute;
        top: 50%; 
        left: 50%; 
        transform: translate(-50%, -50%); 
        width: 30%; 
    }

    .input-group {
        width: 100%;
    }

    .form-control {
        width: calc(100% - 120px);
    }

    .btn-search {
        width: 80px;
        background-color: blue;
        color: white;
    }
</style>

<div class="bkgImage"></div>

    <div class="container mt-5">
        <div class="search-bar-container">
            <form method="get" class="mb-4">
                <div class="input-group">
                    <input type="text" name="searchTerm" class="form-control" placeholder="Search published files...">
                    <button class="btn btn-search" type="submit">Search</button>
                </div>
            </form>
        </div>

    <div class="content-container">
    <h2>Published Resources</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>File Name</th>
                <th>File Type</th>
                <th>Uploaded Date</th>
                <th>Uploaded By</th>
                <th>Download</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var resource in Model.PublishedResources)
            {
                <tr>
                    <td>@resource.FileName_</td>
                    <td>@resource.FileType</td>
                    <td>@resource.UploadedDateTime.ToString("MM/dd/yyyy")</td>
                    <td>@resource.FirstName @resource.LastName</td>
                    <td>
                        <a href="@Url.Content(resource.FilePath)" class="btn btn-primary" download>Download</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>


