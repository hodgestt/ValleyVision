@page
@model CitizenViewModel
@{
    ViewData["Title"] = "Home";
}
<meta name="viewport" content="width=device-width, initial-scale=1">

<style>
    h3 {
        -webkit-text-fill-color: white;
        text-align: center;
        font-size: 5vw;
        margin-top: 6%;
    }

    h4 {
        -webkit-text-fill-color: white;
        text-align: center;
        font-size: 2.5vw;
    }

    .table-header {
        background-color: #274c77;
        color: white;
        vertical-align: middle !important;
    }

    .container {
        max-width: 2000px;
        padding: revert;
    }

    .grid-container {
        display: grid;
        grid-template-rows: 60vh auto;
        gap: 20px;
        max-width: 2000px;
        margin: 0;
        padding: 0;
    }

    .top-section {
        height: 60vh;
        background-image: url('/images/MadCoHomePagePic.jpeg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        margin: 0;
    }

    .search-bar-container {
        position: absolute;
        top: 46%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 40%;
    }

    .bottom-section {
        padding-right: 15vw;
        padding-left: 15vw;
    }

</style>


<div class="grid-container">
    <div class="top-section" id="bkgImage">
        <div>
            <h3>MADISON COUNTY</h3>
            <h4>V I R G I N I A</h4>
        </div>
        <div class="search-bar-container">
            <form method="get" class="mb-4">
                <div class="input-group">
                    <input type="text" name="searchTerm" class="form-control" placeholder="Search published files..." value="@HttpContext.Request.Query["searchTerm"]">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </form>
            @if (!string.IsNullOrEmpty(HttpContext.Request.Query["searchTerm"]))
            {
                <div class="clear-search">
                    <a href="@Url.Page("/Index")" class="badge bg-secondary text-white fs-6 p-2">
                        Clear search: @HttpContext.Request.Query["searchTerm"] <i class="bi bi-x-circle"></i>
                    </a>
                </div>
            }
        </div>
    </div>
