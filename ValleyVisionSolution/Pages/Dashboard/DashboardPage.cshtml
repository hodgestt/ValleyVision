@page
@model ValleyVisionSolution.Pages.Dashboard.DashboardPageModel
@{
    ViewData["Title"] = "Home";
}

<style>
    .tile-container {
        display: flex;
        flex-wrap: wrap;
    }

    .dashboard-tile {
        text-decoration: none;
        width: calc(33% - 4%);
        height: 16vw;
        border-radius: 5px;
        cursor: pointer;
        transition: transform 0.5s, box-shadow 0s;
        border: 1px solid black;
        outline: none;
        margin: 2%;
        display:grid;
        grid-template-rows:0.2fr 1fr;
        grid-template-areas:
        "Title"
        "Icon";
        place-items: center;
    }

        .dashboard-tile:hover {
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            color: black;
        }

    .dashboard-tile-title {
        background-color: #274C77;
        color: #fff;
        text-align: center;
        grid-area:Title;
        width:100%;
        height:100%;
        font-size:1.25vw;
    }

    .dashboard-tile-icon {
        padding: 2.5% 6% 2.5% 6%;
        grid-area:Icon;
        max-height: 10vw;
        max-width: 100%;
    }

    .bootstrap-select > .dropdown-toggle {
        height: 38px;
    }

        .bootstrap-select > .dropdown-toggle:active,
        .bootstrap-select > .dropdown-toggle:focus {
            outline: none !important;
        }
</style>

<div class="tile-container">
    @{
        foreach (var tile in Model.TilesList)
        {
            <a asp-page="@tile.PageLink" class="dashboard-tile">
                <div class="dashboard-tile-title">@tile.TileName</div>
                <img class="dashboard-tile-icon" src="@tile.IconPath"/>
            </a>
        }
    }
</div>