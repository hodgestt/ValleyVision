        <p>No medium impact proposed developments found.</p>
    }

    <!-- Low Impact Section -->
    @if (Model.LowImpact.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <h2 class="section-title">Low Impact Proposed Developments</h2>
                <table class="table table-bordered table-hover">
                    <thead class="otherHeader">
                        <tr>
                            <th scope="col" class="col-name">Name</th>
                            <th scope="col" class="col-description">Description</th>
                            <th scope="col" class="col-impact">Impact Level</th>
                            <th scope="col" class="col-date">Uploaded Date</th>
                            <th scope="col" class="col-actions">Actions</th>
                            
